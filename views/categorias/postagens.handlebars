<h2>{{categoria.nome}}</h2>
<hr>
{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h3>{{titulo}}</h3>
            <p>{{descricao}}</p>
            <a href="/postagem/{{slug}}"><button class="btn btn-success">Read More</button></a>
            <hr>
            <small>Publication Date:{{data}}</small>
        </div>
    </div>
{{else}}
    <h4>There is no post of this category</h4>
{{/each}}