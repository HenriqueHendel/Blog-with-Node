<h2>Category List</h2>
<hr>
<a href="/admin/categoria/add"><button class="btn btn-success">New Category</button></a>

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small>
            <br>
            <small>Creation Date:{{date}}</small>
            <br>
            <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success mt-4">Edit Category</button></a>
            <form action="/admin/categoria/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Delete Category</button>
            </form>
        </div>
    </div>
{{else}}
    <h4 class="mt-3" >There is no category</h4>
{{/each}}