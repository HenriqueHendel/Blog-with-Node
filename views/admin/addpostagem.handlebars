{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{/each}}
<h4>Nova Postagem</h4>
<div class="card">
    <div class="card-body">
        <form action="/admin/postagem/nova" method="POST">
            <label for="titulo">Título</label>
            <input type="text" name="titulo" class="form-control" id="titulo">

            <label for="slug">Slug</label>
            <input type="text" name="slug" class="form-control" id="slug">

            <label for="descricao">Descricao</label>
            <input type="text" name="descricao" class="form-control" id="descricao">

            <label for="conteudo">Conteúdo</label>
            <textarea name="conteudo" class="form-control" id="conteudo"></textarea>

            <br>
            <label for="categorias">Categorias</label>
            <select name="categoria" id="categorias" class="custom-select">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>

            <br>
            
            <button class="btn btn-success mt-4" type="submit">Criar Postagem</button>
        </form>
    </div>
</div>